<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/CardViewDescubrir">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ImageViewDescubrir"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/TituloDescubrir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ImageViewDescubrir"
            android:text="Titulo descubrir"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descripcionDescubrir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TituloDescubrir"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ImageViewDescubrir"
            android:text="Descubre cosas que te pueden interesar" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>