<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="6dp"
    android:id="@+id/CardViewPlantaYRecordatorioJardin"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ImageViewPlantaJardin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/TextviewNombrePlantaJardin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ImageViewPlantaJardin"
            android:text="Nombre planta"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/TextViewNumeroRecordatorios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextviewNombrePlantaJardin"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ImageViewPlantaJardin"
            android:text="Recordatorios: " />
    </RelativeLayout>
</androidx.cardview.widget.CardView>